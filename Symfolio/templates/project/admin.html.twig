{% extends "base.html.twig" %}

{% block body %}
{% if app.user %}

<div class="d-flex justify-content-center align-items-center">
    <h1 class="text-center">{{app.user.username|capitalize}}</h1>

    <a id="btAdd" class="btn btn-secondary" href="{{path('project_create')}}">Ajoutez un projet</a>
</div>
<hr>

<section>

    <div>
        {% for projet in projets %}
        <div class="d-flex row">
            <div class="col-5">
                <img src="{{ projet.image }}" alt="Illustration" class="img-fluid">
            </div>
            <div class="col-1 blockBtn d-flex flex-column justify-content-center">
                <a href="{{path('project_delete', {'id': projet.id })}}" class="btn btn-danger action-btn mb-3"><i
                        class="fas fa-times"></i></a>
                <a class="action-btn btn btn-warning" href="{{path('project_edit', {'id': projet.id })}}"><i
                        class="fas fa-edit"></i></a>
            </div>
            <div class="d-flex flex-column align-items-end col-6 justify-content-center">
                <h2>{{projet.title}}</h2>

                {# Le lien du projet serait plutôt dans le projet lui-même #}
                {# <a href="{{projet.weblink}}">Lien du projet</a> #}
                <div class="content">


                    <a href="{{ path( 'project_show', {'id': projet.id} )}}" class="btn btn-primary">Voir plus</a>
                </div>
            </div>
        </div>
        <hr>
        {% endfor %}
    </div>
</section>
{% else %}
<h1 class="text-center"> 404 Il n'y a rien ici...</h1>
{% endif %}
{% endblock %}