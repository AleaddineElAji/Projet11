{% extends 'base.html.twig' %}

{% block title %}ALAEDIN ELAJI - Projets{% endblock %}

{% block body %}
<section class="projets mt-5">
    <h1 class="mb-5 text-center">Mes projets</h1>
    {% for projet in projets %}
    <div class="d-flex row">
        <div class="col-4 d-flex align-items-center">
            <img src="{{ projet.image }}" alt="Illustration" class="img-fluid">
        </div>
        <div class="col-4 d-flex align-items-center flex-column justify-content-start">
            <h2>{{projet.title}}</h2>
            <div class="metadata">Projet effectu√© entre le 06/12/2021 et le 13/12/2021</div>
        </div>
        <div class="d-flex flex-column align-items-center col-4 justify-content-center">
            {{ projet.description | raw }}
            <div class="content">
                <a href="{{ path( 'project_show', {'id': projet.id} )}}" class="btn btn-primary">Voir plus</a>
            </div>
        </div>
    </div>
    <hr>
    {% endfor %}



</section>
{% endblock %}